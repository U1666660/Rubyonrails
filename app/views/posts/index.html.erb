<h1>Posts#index</h1>

<%= link_to 'All Posts', posts_path %>


  <% @posts.each do |post| %>
      <p>
          <%= truncate(post.title, length: 60, separate: '' ) %><br>
          <%= time_ago post.created_at %>
      </p>

      <p>
          <%= truncate(post.content, length: 104, separate: '' ) { link_to 'Read More', post_path(post) }%>

      </p>


<% if Setting.tag_visible? %>
      <p>
          <% post.tags.each do |tag| %>
          <%= link_to tag.name, posts_path(tag: tag.name) %>
          <% end %>
      </p>
<% end %>
      <hr>
<% end %>

<p><%= will_paginate @posts %></p>
